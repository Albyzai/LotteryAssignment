<h2>Tickets</h2>
<div class="container">
    @if (ViewBag.Tickets != null)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Date of birth</th>
                    <th>Serial Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in ViewBag.Tickets)
                {
                    <tr>
                        <td>@ticket.FirstName</td>
                        <td>@ticket.SurName</td>
                        <td>@ticket.Email</td>
                        <td>@ticket.PhoneNumber</td>
                        <td>@ticket.DateOfBirth</td>
                        <td>@ticket.SerialNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else{ 
        <p>Unfortunately no tickets were found.</p>
    }

</div>